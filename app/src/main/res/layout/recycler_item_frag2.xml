<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_cv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="16dp"
    android:layout_margin="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rv_title"
            android:text="title"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="400dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/rv_line"
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_below="@+id/rv_title"
            android:background="#CCCCCC"/>

        <ImageView
            android:id="@+id/rv_image"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_below="@+id/rv_line"
            android:src="#D8BEE6"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/rv_tv"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_image"
            android:paddingVertical="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="32dp"
            android:paddingHorizontal="12dp"
            android:inputType="textMultiLine"
            android:text="본문내용"/>



        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/rv_et"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>


        <EditText
            android:id="@+id/rv_et"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_comment"
            android:inputType="textMultiLine"
            android:layout_below="@+id/rv_tv"/>

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_mode_comment_24"
            android:layout_alignTop="@id/rv_et"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>